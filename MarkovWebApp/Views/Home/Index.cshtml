@model MarkovWebApp.Models.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome to Markov Text Generator</h1>
    <p class="lead">Unleash the power of Markov chains to generate unique and coherent text based on your input.</p>
</div>

<div class="row mt-5">
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Train the Model</h5>
                <p class="card-text">Feed the Markov model with your text data to teach it patterns and relationships between words. The more you train, the smarter it gets!</p>
                <a asp-controller="Home" asp-action="Train" class="btn btn-primary btn-lg">Go to Training</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Generate Text</h5>
                <p class="card-text">Once trained, provide a starting phrase and watch the Markov model generate a continuous story or passage based on its learned knowledge.</p>
                <a asp-controller="Home" asp-action="Generate" class="btn btn-success btn-lg">Generate Text</a>
            </div>
        </div>
    </div>
</div>

@if (Model != null && !string.IsNullOrEmpty(Model.StatusMessage))
{
    <div class="alert alert-info mt-4" role="alert">
        @Model.StatusMessage
    </div>
}
